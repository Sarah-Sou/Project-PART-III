<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title>Login</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>

<%- include("../partials/header") %>

<h1 class="page-title">Login</h1>

<form action="/login" method="POST" class="form-card">
  <label>Username</label>
  <input type="text" name="username" required>

  <label>Password</label>
  <input type="password" name="password" required>

  <button class="submit-btn">Login</button>
</form>

<!-- ========================= -->
<!--   SOCIAL LOGIN BUTTONS    -->
<!-- ========================= -->

<div class="oauth-row">

  <!-- GOOGLE -->
  <a href="/auth/google" class="oauth-btn google">
    <img src="/images/google.png" class="oauth-icon">
    Google
  </a>

  <!-- DISCORD -->
  <a href="/auth/discord" class="oauth-btn discord">
    <img src="/images/discord.png" class="oauth-icon">
    Discord
  </a>

  <!-- GITHUB -->
  <a href="/auth/github" class="oauth-btn github">
    <img src="/images/github.png" class="oauth-icon">
    GitHub
  </a>

</div>

<!-- ========================= -->
<!-- END SOCIAL LOGIN BUTTONS  -->
<!-- ========================= -->

<%- include("../partials/footer") %>

</body>
</html>
