<header class="navbar">
  <div class="nav-left">
    <img src="/images/logo.png" class="logo" />
    <a href="/" class="brand">Habit Tracker</a>
  </div>

  <nav class="nav-right">

    <% if (!currentUser) { %>

      <!-- When NOT logged in -->
      <a href="/login" class="nav-link">Login</a>
      <a href="/register" class="nav-link">Register</a>

    <% } else { %>

      <!-- When LOGGED IN -->
      <a href="/habits" class="nav-link">My Habits</a>

      <!-- Profile with avatar -->
      <a href="/profile" class="nav-link profile-link">
        <img 
          src="<%= currentUser.profilePic || '/uploads/default.png' %>" 
          class="nav-profile-pic"
        />
        <span>Profile</span>
      </a>

      <!-- â­ NEW: Change Password -->
      <a href="/change-password" class="nav-link">Change Password</a>

      <!-- Logout -->
      <a href="/logout" class="nav-link logout">Logout</a>

    <% } %>

  </nav>
</header>
