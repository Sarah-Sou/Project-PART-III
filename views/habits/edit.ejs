<%- include("../layout", { body: `
<h1>Edit Habit</h1>

<form action="/habits/<%= habit._id %>/edit" method="POST" class="form-card">

    <label>Habit Title</label>
    <input type="text" name="title" value="<%= habit.title %>" required>

    <label>Description</label>
    <textarea name="description"><%= habit.description %></textarea>

    <label>Frequency</label>
    <select name="frequency" required>
        <option value="Daily" <%= habit.frequency === "Daily" ? "selected" : "" %>>Daily</option>
        <option value="Weekly" <%= habit.frequency === "Weekly" ? "selected" : "" %>>Weekly</option>
        <option value="Monthly" <%= habit.frequency === "Monthly" ? "selected" : "" %>>Monthly</option>
    </select>

    <label>Status</label>
    <select name="status">
        <option value="Active" <%= habit.status === "Active" ? "selected" : "" %>>Active</option>
        <option value="Paused" <%= habit.status === "Paused" ? "selected" : "" %>>Paused</option>
    </select>

    <button class="btn submit-btn">Save Changes</button>
</form>
` }) %>
